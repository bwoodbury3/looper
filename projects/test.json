{
    "config": {
        "tempo": {
            "bpm": 100,
            "beats_per_measure": 4,
            "beat_duration": 4
        },
        "start_measure": 0,
        "stop_measure": 4
    },
    "devices": [
        {
            "name": "drums",
            "type": "VirtualInstrument",
            "instrument": "drums1",
            "volume": 0.2,
            "output_channel": "drums"
        },
        {
            "name": "drumloop",
            "type": "Loop",
            "clip_override": "/tmp/looper/drums_recording.wav",
            "input_channels": ["drums"],
            "output_channel": "drumloop",
            "segments": [
                {
                    "start": 1,
                    "stop": 2,
                    "type": "input"
                },
                {
                    "start": 2,
                    "stop": 2.5,
                    "type": "output"
                },
                {
                    "start": 3,
                    "stop": 3.5,
                    "type": "output"
                }
            ]
        },
        {
            "name": "metronome",
            "type": "Metronome",
            "volume": 0.2,
            "output_channel": "metronome",
            "segments": [
                {
                    "start": 0,
                    "stop": 2,
                    "type": "output"
                }
            ]
        },
        {
            "name": "combiner",
            "type": "Combiner",
            "input_channels": ["drums", "drumloop", "metronome"],
            "output_channel": "audio_out"
        },
        {
            "name": "laptop_speaker",
            "type": "AudioSink",
            "device": "Built-in Output",
            "input_channel": "audio_out"
        }
    ]
}