{
    "config": {
        "tempo": {
            "bpm": 100,
            "beats_per_measure": 4,
            "beat_duration": 4
        }
    },
    "devices": [
        {
            "name": "drums",
            "type": "VirtualInstrument",
            "instrument": "drums1",
            "volume": 0.2,
            "output_channel": "drums"
        },
        {
            "name": "drumloop",
            "type": "Loop",
            "input_channels": ["drums"],
            "output_channel": "drumloop",
            "segments": [
                {
                    "start": 1,
                    "stop": 2,
                    "type": "input"
                },
                {
                    "start": 2,
                    "stop": 4,
                    "type": "output"
                }
            ]
        },
        {
            "name": "metronome",
            "type": "Metronome",
            "output_channel": "metronome",
            "segments": [
                {
                    "start": 0,
                    "stop": 2,
                    "type": "output"
                }
            ]
        },
        {
            "name": "combiner",
            "type": "Combiner",
            "input_channels": ["drums", "drumloop"],
            "output_channel": "audio_out"
        },
        {
            "name": "toggle",
            "type": "Toggle",
            "input_channel": "audio_out",
            "output_channel": "audio_out_toggle",
            "segments": [
                {
                    "start": 0,
                    "stop": 1.5,
                    "type": "output"
                },
                {
                    "start": 2.0,
                    "stop": 4.0,
                    "type": "output"
                }
            ]
        },
        {
            "name": "laptop_speaker",
            "type": "AudioSink",
            "device": "Built-in Output",
            "input_channel": "audio_out_toggle"
        }
    ]
}